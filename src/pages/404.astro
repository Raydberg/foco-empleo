---
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>404 - Página no encontrada | Foco Empleo</title>
        <meta
            name="description"
            content="La página que buscas no existe o ha sido movida."
        />
    </head>
    <body>
        <section class="error-page">
            <div class="error-content">
                <h1 class="error-code">404</h1>
                <h2 class="error-title">Página no encontrada</h2>
                <p class="error-description">
                    Lo sentimos, la página que buscas no existe o ha sido
                    movida. Por favor, vuelve a la página de inicio.
                </p>
                <a href="/" class="btn-home">Volver a Inicio</a>
            </div>

            <div class="error-illustration">
                <svg
                    viewBox="0 0 400 400"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    class="illustration-svg"
                >
                    <circle cx="200" cy="140" r="80" fill="#E8E8E8"></circle>

                    <g class="plug-male">
                        <rect
                            x="175"
                            y="100"
                            width="50"
                            height="35"
                            rx="4"
                            fill="#1F2937"></rect>
                        <!-- Prongs -->
                        <rect
                            x="185"
                            y="135"
                            width="8"
                            height="25"
                            rx="2"
                            fill="#1F2937"></rect>
                        <rect
                            x="207"
                            y="135"
                            width="8"
                            height="25"
                            rx="2"
                            fill="#1F2937"></rect>
                        <!-- Cable going up -->
                        <path
                            d="M200 100 L200 60 L280 60 L280 0"
                            stroke="#2E8B7A"
                            stroke-width="6"
                            stroke-linecap="round"
                            fill="none"></path>
                    </g>

                    <!-- Spark effects near top plug -->
                    <g class="sparks" fill="#2E8B7A">
                        <path
                            d="M240 115 L250 112 L245 120 L255 117"
                            stroke="#2E8B7A"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            fill="none"></path>
                        <path
                            d="M155 125 L145 122 L150 130 L140 127"
                            stroke="#2E8B7A"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            fill="none"></path>
                    </g>

                    <g class="plug-female">
                        <!-- Socket body -->
                        <rect
                            x="175"
                            y="200"
                            width="50"
                            height="35"
                            rx="4"
                            fill="#1F2937"></rect>
                        <!-- Socket holes -->
                        <rect
                            x="185"
                            y="190"
                            width="8"
                            height="15"
                            rx="2"
                            fill="#374151"></rect>
                        <rect
                            x="207"
                            y="190"
                            width="8"
                            height="15"
                            rx="2"
                            fill="#374151"></rect>
                        <!-- Cable going down -->
                        <path
                            d="M200 235 L200 280 L120 280 L120 400"
                            stroke="#2E8B7A"
                            stroke-width="6"
                            stroke-linecap="round"
                            fill="none"></path>
                    </g>

                    <!-- Spark effects near bottom plug -->
                    <g class="sparks-bottom" fill="#2E8B7A">
                        <path
                            d="M235 220 L245 217 L240 225 L250 222"
                            stroke="#2E8B7A"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            fill="none"></path>
                    </g>
                </svg>
            </div>
        </section>

        <style>
            .error-page {
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
                padding: 2rem 5rem;
                background: linear-gradient(
                    180deg,
                    rgba(254, 255, 255, 1) 0%,
                    rgba(217, 225, 245, 1) 100%
                );
                gap: 6rem;
                box-sizing: border-box;
                font-family: "Mulish", sans-serif;
            }

            .error-content {
                max-width: 460px;
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                gap: 24px;
            }

            .error-code {
                font-size: 9rem;
                font-weight: 700;
                color: #309689;
                line-height: 1;
                margin: 0;
                letter-spacing: -0.02em;
            }

            .error-title {
                font-size: 1.375rem;
                font-weight: 700;
                color: #0d0d26;
                margin: 0;
            }

            .error-description {
                font-size: 1.5rem;
                color: #524b6b;
                line-height: 1.5;
                margin: 0;
                font-weight: 400;
            }

            .btn-home {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                background-color: #309689;
                color: white;
                width: 282px;
                height: 55px;
                border-radius: 40px;
                text-decoration: none;
                font-weight: 600;
                font-size: 1.125rem;
                transition:
                    background-color 0.2s ease,
                    transform 0.2s ease;
                margin-top: 8px;
            }

            .btn-home:hover {
                background-color: #247363;
                transform: translateY(-2px);
            }

            .error-illustration {
                width: 350px;
                height: 350px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .illustration-svg {
                width: 100%;
                height: 100%;
            }

            /* Subtle animations */
            .sparks,
            .sparks-bottom {
                animation: sparkle 1.5s ease-in-out infinite;
            }

            .sparks-bottom {
                animation-delay: 0.75s;
            }

            @keyframes sparkle {
                0%,
                100% {
                    opacity: 1;
                }
                50% {
                    opacity: 0.3;
                }
            }

            .plug-male {
                animation: float-up 3s ease-in-out infinite;
            }

            .plug-female {
                animation: float-down 3s ease-in-out infinite;
            }

            @keyframes float-up {
                0%,
                100% {
                    transform: translateY(0);
                }
                50% {
                    transform: translateY(-5px);
                }
            }

            @keyframes float-down {
                0%,
                100% {
                    transform: translateY(0);
                }
                50% {
                    transform: translateY(5px);
                }
            }

            /* Responsive */
            @media (max-width: 900px) {
                .error-page {
                    flex-direction: column;
                    text-align: center;
                    gap: 2rem;
                    padding: 3rem 1.5rem;
                }

                .error-content {
                    align-items: center;
                }

                .error-code {
                    font-size: 6rem;
                }

                .error-description {
                    font-size: 1.25rem;
                }

                .btn-home {
                    width: 240px;
                    height: 50px;
                }

                .error-illustration {
                    width: 320px;
                    height: 320px;
                    order: -1;
                }
            }

            @media (max-width: 480px) {
                .error-page {
                    padding: 2rem 1rem;
                    gap: 1.5rem;
                }

                .error-code {
                    font-size: 4.5rem;
                }

                .error-title {
                    font-size: 1.125rem;
                }

                .error-description {
                    font-size: 1rem;
                }

                .btn-home {
                    width: 200px;
                    height: 48px;
                    font-size: 1rem;
                }

                .error-illustration {
                    width: 260px;
                    height: 260px;
                }
            }
        </style>
    </body>
</html>
