---
import JobItem from "./JobItem.astro";



const { jobs, variant = "grid", limit } = Astro.props;
const displayedJobs = limit ? jobs.slice(0, limit) : jobs;

const gridClass =
    variant === "list"
        ? "flex flex-col gap-4 max-w-5xl mx-auto"
        : "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6";
---

{
    displayedJobs.length > 0 ? (
        <section class="container mx-auto px-4 py-10">
            <div class={gridClass}>
               
            </div>
        </section>
    ) : (
        <div class="container mx-auto px-4 py-16 text-center">
            <p class="text-gray-600 text-lg">No hay ofertas disponibles</p>
        </div>
    )
}
