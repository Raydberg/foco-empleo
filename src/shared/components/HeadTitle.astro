---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div slot="header-hero" class="hero-header">
    <div
        class="mx-auto px-4 pt-12 pb-10 md:pt-16 md:pb-12 text-center relative z-10"
    >
        <h1
            class="text-3xl md:text-4xl lg:text-5xl font-bold leading-[100%] tracking-[0%] text-center text-white"
        >
            {title}
        </h1>
    </div>
</div>
