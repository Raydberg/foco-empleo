---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import NavBar from "../shared/components/NavBar.astro";
import Footer from "../shared/components/Footer.astro";

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description, image } = Astro.props;
const defaultDescription =
	"Encuentra empleos en espa√±ol en un solo lugar - Foco Empleo";
const defaultImage = new URL("/og-image.jpg", Astro.site);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Foco Empleo</title>
		<meta name="description" content={description || defaultDescription} />

		<!-- Open Graph / Facebook / LinkedIn -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={`${title} - Foco Empleo`} />
		<meta property="og:site_name" content="Foco Empleo" />
		<meta property="og:locale" content="es_ES" />
		<meta
			property="og:description"
			content={description || defaultDescription}
		/>
		<meta
			property="og:image"
			content={new URL(image || defaultImage, Astro.site)}
		/>
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content={title} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={`${title} - Foco Empleo`} />
		<meta
			property="twitter:description"
			content={description || defaultDescription}
		/>
		<meta
			property="twitter:image"
			content={new URL(image || defaultImage, Astro.site)}
		/>

		<link
			rel="alternate"
			type="application/rss+xml"
			title="Foco Empleo Blogs"
			href={new URL("rss.xml", Astro.site)}
		/>
		<link rel="canonical" href="https://focoempleo.com/" />
		<ClientRouter />
		<meta name="google-adsense-account" content="ca-pub-9006029334279158" />
		<script
			async
			src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9006029334279158"
			crossorigin="anonymous"></script>
	</head>
	<body class="bg-gray-50 text-gray-900 flex flex-col min-h-screen">
		<NavBar />
		<slot name="header-hero" />
		<main class="grow" style="overflow-anchor: none;">
			<slot />
		</main>
		<Footer />
	</body>
</html>
